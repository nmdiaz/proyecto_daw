
@{
    ViewBag.Title = "Index";
}
<style>
    body
    {
        background-image:url('../../Content/images/index.jpg');
    }

/* Container box to set the sides relative to */


</style>
<h2>Listado de juegos</h2>


<div class="cube">
    <div class="_2048">
        <a href='@Url.Action("g2048", "games")'>
            <img src='@Url.Content("~/resources/2048t.png")' />
          </a>
    </div>
    <div class="arcanoid">
        <a href='@Url.Action("arcanoid", "games")'>
            <img src='@Url.Content("~/resources/arcanoidt.png")' />
        </a>
    </div>
</div>
<center>
<button id="mover"> Siguiente</button>
</center>


<script>
    'use strict'
    let boton = document.getElementById('mover');
    let cubo = document.getElementsByClassName('cube')[0];
    let count = 0;
    boton.addEventListener('click', function () {
        if (count == 0) {
            cubo.style.transform = "rotateX(90.5deg)";
            count++;
        }
        else
        {
            cubo.style.transform = "rotateX(0deg)";
            count = 0;
        }
     
    }, true);
    

</script>


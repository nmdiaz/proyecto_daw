@using proyecto_final_moha_nestor.Models;
@{
    ViewBag.Title = "Arcanoid";
}

@{	
	var record = (RecordsViewModel[])ViewData["Records"];
}
<link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
<center>
	<div id="records">
		<div class="row">
			<div class="col-md-12 cabecera"> Records en Arcanoid</div>
		</div>
			@{var c = 1;


				while (record[c-1] != null)
				{
				<div class="row">
					<div class="col-md-1 datos">@c.</div>
					<div class="col-md-4 datos">@record[c-1].Username</div>
					<div class="col-md-5 datos">@record[c-1].time</div>
					<div class="col-md-2 datos">@record[c-1].score puntos</div>
				</div>
				c++;
				}
			}
	</div>
</center>

<style>
	#records
	{	margin-top:25px;
		font-family: 'Press Start 2P', cursive;
	}
	#records  .cabecera
	{
		color:Highlight;
		font-size:35px;
		text-align:center;
		margin-bottom:5px;
		
	}
	#records  .datos 
	{
		font-size:20px;
		color:lightgreen;
		padding:10px 0 10px 0;
	}
	#records .row
	{
		border-bottom:1px solid red;
	}

</style>